            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--main-bg);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        
        .sidebar {
            background-color: var(--sidebar-bg);
            height: 100vh;
            position: fixed;
            width: 270px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }
        
        .logo {
            padding: 20px;
            display: flex;
            align-items: center;
        }
        
        .logo-text {
            margin-left: 10px;
        }
        
