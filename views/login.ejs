            font-size: 24px;
            margin: 0;
            line-height: 1;
        }
        
        .logo-text h1:first-child {
            color: var(--primary-color);
            font-weight: bold;
        }
        
        .logo-text h1:last-child {
            color: white;
            font-weight: 300;
        }
        
        .nav-item {
            padding: 15px 20px;
            display: flex;
            align-items: center;
            color: #666;
            transition: all 0.3s;
            cursor: pointer;
        }
        
        .nav-item:hover, .nav-item.active {
            background-color: rgba(176, 102, 232, 0.1);
            color: var(--primary-color);
        }
        
        .nav-item i {
            margin-right: 15px;
            font-size: 18px;
            width: 20px;
            text-align: center;
        }
        
